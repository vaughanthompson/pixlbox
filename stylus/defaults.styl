// basic defaults
html, body
    width: 100%
    height: 100%
    font-family: fontStack
body
    font-size: 16px
body
    background-color: mainBG
    color: brand1
    // background: linear-gradient(top, white, brand1)
hr
    border: none
    border-bottom: 1px solid lightGrey



hr.small
    border-bottom: 3px solid brand2 !important
    width:100px 
.reverse hr
    border-bottom: 2px solid brand1

.noPad
    padding: 0 !important
// blend modes

.nowrap 
    text-wrap: nowrap

.noPadBottom
    padding-bottom: 0 !important
.noPadTop
    padding-top: 0 !important
.noPadRight
