//logo
div.logo
    display:flex
    justify-content: flex-start
    align-items: center
    overflow: hidden
    width: logoDimens

div.logo svg
    display: block
    width: 100%
    height: auto
    @media ie
        width:55px
        height:50px

#mNav div.logo 
    @media phoneRule
        width: logoDimens*0.8
    @media tabletRule
        width: logoDimens
#mNav div.logo svg
    max-height: navSpacer*0.9
#cNav div.logo
    margin-bottom: 10px
    @media desktopRule
        margin-top: marXXS
    @media lgdesktopRule
        margin-top: marXXS
     @media ie
        height:50px
        width:55px

//cta buttons
.cta
    display: inline-block
    padding: 0.75em 2.5em 0.7em 1em
    margin: marXS 0
    font-weight: 700 !important
    background-color: white
    color: brand1
    position: relative
a.cta:link, a.cta:visited
    color: brand1
    text-decoration: none
a.cta:hover, a.cta:active
    color: white
    background-color: brand3
a.cta:hover::after
    content: '>'
    position: absolute
    right: 0.75em
    top: 0.70em
.rev .cta
    background-color: whiteAlp50
    color: brand1
 .rev a.cta:link, .rev a.cta:visited
    color: brand1
.rev a.cta:hover, .rev a.cta:active
    color: white
    background-color: brand3


.ctaButton, a.ctaButton
    color: brand1
    text-decoration: none
    font-weight: 600
    font-size: 1.1em
    letter-spacing: 0 
    display: inline-block
    background-color: blackAlp5
    border-radius: 5px
    transition: 0.3s
    padding: padXS padXS 0 padXS !important 
    border-bottom: 3px solid rgba(0,0,0,0.0) 
.ctaButton:hover, a.ctaButton:hover
    //display: block
    border-radius: 0
    background-color: rgba(0,0,0,0.0) !important

.ctaButton:link::after, 
.ctaButton:visited::after 
    content: ""
    display: block
    width: 0
    border-bottom: 3px solid brand1
    transition: width 0.3s
    padding: 0 0 padXS*0.7 0

.ctaButton:hover::after
    width: 100%

.ctaBtn 
    display: inline-block

// icons
.icon 
    background-color: whiteAlp05
    padding: padStd
    font-size: 1.5rem
    display: inline-block
a#toTop
    position: fixed
    bottom: 3vw
    right: 3vw
    text-decoration: none
    opacity: 0
.linkIcon
    color:red
    font-size: 0.8em
    position: absolute
    margin-top: 0.4em
    margin-left: 5px
    margin-right: 5px



//media
.pbVideo
    position: relative
    padding-bottom: 56.25%
    padding-top: 0
    height: 0
.pbVideo iframe 
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

div.video
    position: relative
div.video > div
    width: 100%
    height: 100%  

.hidden-xs
    display: none
div#vidHolder
    position: absolute
    top: 0
    left: 0px
    width: 100%
    height: 100%
    overflow: hidden
video.hidden-xs
    width: 100%
    height: 100%
    object-fit: cover
@media dtrigger
    video.hidden-xs
        width: 100%
        height: 100%
@media dtrigger
    .hidden-xs
        display: block
       





